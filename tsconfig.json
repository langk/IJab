{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "outDir": "./lib",
    "target": "es2015",
    "strict": true,
    "strictNullChecks": false,
    "types": [ "node" ],
    "typeRoots": [ "../node_modules/@types" ]
  },
  "include": ["src/*"]
}
